{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dest",
		"target": "es2015",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"baseUrl": "./",
		"lib": [
			"es2017"
		],
		"noUnusedLocals": true
	},
	"exclude": [
		"node_modules",
		"dest",
		"typings"
	]
}